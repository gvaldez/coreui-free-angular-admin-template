{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "esnext",
    "target": "es5",
    "types": [],
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"],
      "@service/*": ["app/services/*"],
      "@guard/*": ["app/guards/*"],
      "@component/*": ["app/components/*"],
      "@view/*": ["app/view/*"],
      "@module/*": ["app/modules/*"],
      "@env/*": ["environments/*"],
    }
  },
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.d.ts"
  ]
}
